<body>

    <div id="main-card">
        <h1>Happy New Year Roshuuu üéÄüéÄ</h1>
        
        <button class="celebrate-btn" id="btn" onclick="celebrate()">Celebrate! üéâ</button>

        <div id="message-container">
            <h2 style="color: #ff4757;">Happy New Year!</h2>
            <p class="message-text">
                Sending heartfelt wishes for an amazing New Year full of blessings.<br><br>
                Life changes, but my New Year wishes for you remains: health, happiness, and love.
            </p>
            <div class="signature">By HuzuüòÅ</div>
        </div>
    </div>

    <script>
        function celebrate() {
            // Hide button, show text
            document.getElementById('btn').style.display = 'none';
            const container = document.getElementById('message-container');
            container.style.display = 'block';
            
            // Add grand finale border animation
            document.getElementById('main-card').classList.add('grand-finale');

            // Create confetti particles üéâ
            for (let i = 0; i < 100; i++) {
                createConfetti();
            }
        }

        function createConfetti() {
            const colors = ['#ff85a2', '#ff4757', '#ffd32a', '#2ecc71', '#3498db', '#9b59b6'];
            const confetti = document.createElement('div');
            confetti.classList.add('confetti');
            
            // Randomize position and animation
            confetti.style.left = Math.random() * 100 + 'vw';
            confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            confetti.style.width = Math.random() * 10 + 5 + 'px';
            confetti.style.height = confetti.style.width;
            
            // Random duration and delay
            const duration = Math.random() * 3 + 2;
            confetti.style.animationDuration = duration + 's';
            confetti.style.animationDelay = Math.random() * 2 + 's';

            document.body.appendChild(confetti);

            // Clean up elements
            setTimeout(() => {
                confetti.remove();
            }, (duration + 2) * 1000);
        }
    </script>
</body>
