        /* Confetti/Firework Style Particles */
        .confetti {
            position: absolute;
            width: 15px;
            height: 15px;
            background-color: #f00;
            top: -20px;
            z-index: 1;
            border-radius: 3px;
            animation: fall linear forwards;
        }

        @keyframes fall {
            to {
                transform: translateY(100vh) rotate(720deg);
            }
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Final Grand Animation: Glowing border */
        .grand-finale {
            box-shadow: 0 0 50px #ff85a2, inset 0 0 20px #ff85a2;
